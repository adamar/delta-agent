{
    "delete": true,
    "enable": "1",
    "buffer": "16348",
    "rate": "500",
	"strict_path_check": false,
    "file_rules": [
	{
            "path": "/etc/",
            "key": "files",
            "permission": "wa"
        }],
    "syscall_rules": [
        {
            "key": "exec",
            "syscalls": [
                "execve"
            ],
            "actions": [
                "exit",
                "always"
            ]
        },
        {
            "key": "connect",
            "syscalls": [
                "connect"
            ],
            "actions": [
                "exit",
                "always"
            ]
        }
	]
}
